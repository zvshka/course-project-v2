// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id String @id @default(cuid())

  title       String
  description String
  icon        Image  @relation(fields: [imageFilename], references: [filename])

  stages Stage[]

  imageFilename String
}

model Stage {
  id String @id @default(cuid())

  title String
  icon  Image? @relation(fields: [imageFilename], references: [filename])

  lessons Lesson[]
  course  Course   @relation(fields: [courseId], references: [id])

  courseId      String
  imageFilename String?
}

model Lesson {
  id String @id @default(cuid())

  title       String
  description String
  position    Int

  stage   Stage  @relation(fields: [stageId], references: [id])
  stageId String
}

model User {
  id String @id @default(cuid())

  username String @unique
  password String

  firstname String?
  lastname  String?

  email          String    @unique
  email_verified DateTime?

  avatar        Image?  @relation(fields: [imageFilename], references: [filename])
  role          Role?   @default(USER)
  imageFilename String?
}

enum Role {
  USER
  ADMIN
}

model Image {
  filename String @unique
  filepath String
  mimetype String
  size     Int

  Course Course[]
  Stage  Stage[]
  User   User[]
}
